<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <%= @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="panel pane-default">
  <h3 class="panel-heading"><%= @user.username %>'s profil edition</h3>
  <div class="panel-body">
    <%= form_for @user, url: {action: 'profil'}, html: {class: 'form-horizontal'} do |f| %>
      <div class="form-group">
        <%= f.label :avatar, 'Avatar', class: 'col-xs-4 control-label' %>
        <div class="col-xs-8"><%= f.file_field :avatar_file, class: 'form-control' %></div>
      </div>
      <div class="form-group">
        <%= f.label :username, 'Votre nom', class: 'col-xs-4 control-label' %>
        <div class="col-xs-8"><%= f.text_field :username, class: 'form-control' %></div>
      </div>
      <div class="form-group">
        <%= f.label :email, class: 'col-xs-4 control-label' %>
        <div class="col-xs-8"><%= f.text_field :email, class: 'form-control' %></div>
      </div>
      <div class="form-group">
        <%= f.label :firstname, 'Username', class: 'col-xs-4 control-label' %>
        <div class="col-xs-8"><%= f.text_field :firstname, class: 'form-control' %></div>
      </div>
      <div class="form-group">
        <%= f.label :name, 'Name', class: 'col-xs-4 control-label' %>
        <div class="col-xs-8"><%= f.text_field :name, class: 'form-control' %></div>
      </div>
      <div class="form-group">
        <div class="col-xs-8 col-xs-offset-4">
          <button class="btn btn-primary" type="submit">Save</button>
        </div>
      </div>
    <% end %>
  </div>
</div>