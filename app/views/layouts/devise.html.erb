<!DOCTYPE html>
<html>
  <head>
    <title>Events</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
  <div class="container-fluid" style="padding: 0">
    <div class="container-fluid">
      <div class="top">
        <%= image_tag 'bloc11.png', class: 'img-responsive' %>
      </div>
      <div class="contents">
        <% flash.each do |key, value| %>
          <div class="alert <%= flash_class(key) %>">
            <%= value %>
          </div>
        <% end %>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
          <div class="col-xs-12">
            <div class="logoBloc">
              <h1 class="title">Event Planner</h1>
              <%= simple_form_for @user, as: :user,url: session_path(resource_name), wrapper: :horizontal_form, html: {class: 'form-horizontal'} do |f| %>
                <%= f.input :login %>
                <%= f.input :password %>
                <%= f.button :submit, class: 'btn-primary' %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
          <div class="col-xs-12">
            <div class="loginBloc">
              <div class="text-center bloc3">
                <p><input type="text" name="name" value="" readonly="readonly"></p>
                <h4 class="invite-connect">Accéder à votre compte</h4>
                <p class="connect">
                  <a href="<%= user_facebook_omniauth_authorize_path %>" class="btn btn-primary" style="color: #FFFFFF">connect with facebook</a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="footer">
        <%= image_tag 'bloc2.png', class: 'img-responsive' %>
      </div>
    </div>
  </div>
  </body>
</html>
