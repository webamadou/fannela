            <ul class="dropdown-menu">
              <li><a href="<%= admin_countries_path %>">Coutries</a></li>
              <li><a href="<%= admin_events_path %>">Events</a></li>
            </ul>
          </li>
          <li class="active"><a href="/">Home</a></li>
